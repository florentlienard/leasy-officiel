<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.5) 40%, rgba(0, 0, 0, 0.6) 70%), url(<%= image_path('paris-banner.png') %>);">
  <div class="back-btn">
  <%= link_to(root_path) do %>
    <i class="fa fa fa-arrow-left"></i>
  <% end %>
  </div>
  <div class="col-xs-8">
    <div class ="elements-log session-content">
      <img src="<%= image_path "leasy_logo_white.png" %>" alt="logo_red"  width="100">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-input text-left">
    <%= f.input :email, required: false, autofocus: true, :input_html => { class: 'session-form' } %>
    <%= f.input :password, required: false, :input_html => { class: 'session-form' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Log in" , html_options={class: "btn-log"}%>
  </div>
<% end %>
    </div>
  </div>
</div>
