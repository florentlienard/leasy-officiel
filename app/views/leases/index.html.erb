<p style="color: transparent;"> ..</p>
<div class="container container-white">
  <table class="table table-hover background-transparent" style = "background-color: white;">
    <thead class = "table-head-event-index">
      <tr class = "table-head-event-index">
        <th style = "width: 200px;" class = "table-head-event-index">NOM BAILLEUR</th>
        <th style = "width: 150px;" class = "table-head-event-index">EMAIL BAILLEUR</th>
        <th style = "width: 200px;" class = "table-head-event-index"># LOT</th>
        <th style = "width: 240px;" class = "table-head-event-index">ADRESSE</th>
        <th class = "table-head-event-index" style = "width: 200px;">LOCATAIRE</th>
        <th class = "table-head-event-index" style = "width: 100px;">LOYER (€/m)</th>
        <th style = "width: 200px;" class = "table-head-event-index">NATURE</th>
        <th style = "width: 150px;" class = "table-head-event-index">REVISION</th>
        <th style = "width: 150px;" class = "table-head-event-index">FIN</th>
      </tr>
    </thead>
    <tbody>
    <% @leases.each do |lease| %>
        <tr class = "table-row-event-index" id="<%= lease.id %>">
          <td> <%= lease.owner_name %> </td>
          <td> <%= lease.owner_email %> </td>
          <td> <%= lease.num_lot %> </td>
          <td> <%= lease.tenant_address %> </td>
          <td> <%= lease.tenant_name %> </td>
          <td> <%= number_with_delimiter(lease.monthly_rent, :delimeter => " ").to_s.gsub(',',' ') %> € </td>
          <td> <%= lease.nature %> </td>
          <td> <%= lease.next_revision.to_date %> </td>
          <td> <%= lease.end_date.to_date %> </td>
        </tr>
        <tr class="spacer">
          <td class = "col_spacer" colspan="8"></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
