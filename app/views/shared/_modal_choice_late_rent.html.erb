<% @event.status == 'tenant_to_notify' ? (dest = 'locataire') : (dest = 'bailleur') %>

<div class="modal fade" id="ModalLate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog latemodal" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">
          <%= "Retard loyer: relancer le locataire" %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" id='closecross'>
        <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="laterent modal-body">
        <div class="infolate">
          <p><i class="fa fa-info-circle"></i> La mise en demeure constitue le point de départ des intérêts de retard.</p>
        </div>
        <div class="sending-choices">
          <button class="btn btn-primary latechoice" data-toggle='modal' data-target="#exampleModalLong" data-dismiss="modal">Relance simple</button>
          <button class="btn btn-primary latechoice">Mise en demeure</button>
        </div>
      </div>
    </div>
  </div>
</div>
