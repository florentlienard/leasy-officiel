<% if @event.description == "fin de bail" || @event.description == "révision de loyer"%>
        <!-- OWNER TO CONTACT -->
          <% if  @event.status == "owner_to_contact"%>
             <div class = "status-box">
              <div class = "picto_status">
                <%= link_to image_tag("owner_to_be_contacted.png", :width => 100, :height => 100) %>
                <button type="button" class = "btn btn-primary status_title_black" data-toggle='modal' data-target='#exampleModalLong'>Envoyer la demande au bailleur</button>
               </div>
               <div>
                 <%= image_tag("arrow_grey.png", :width => 50, :height => 50) %>
               </div>
              <div class = "picto_status">
                <%= link_to image_tag("notify_tenant_color.png", :width => 100, :height => 100) %>
                <p class = "status_title_grey">Notifier le locataire</p>
               </div>
             </div>
          <!-- OWNER CONTACTED -->
             <% elsif (@event.status == "owner_contacted") || (@event.status == "tenant_to_notify")%>
             <div class = "status-box">
              <div class = "picto_status">
                <%= image_tag("owner_contacted.png", :width => 100, :height => 92) %>
                <p class = "status_title_grey text-center"><i class="fa fa-check-circle-o" aria-hidden="true"></i> Demande envoyée au bailleur</p>
               </div>
               <div>
                 <%= image_tag("arrow_grey.png", :width => 50, :height => 50) %>
               </div>
              <div class = "picto_status">
                <%= link_to image_tag("notify_tenant_color.png", :width => 92, :height => 100) %>
                <button type="button" class="btn btn-primary status_title_black" data-toggle="modal" data-target="#Modalchoice">Notifier le locataire</button>
               </div>
             </div>
          <!-- TENANT NOTIFIED -->
        <% elsif @event.status == "tenant_notified"%>
        <div>
            <div class = "status-box">
              <div class = "picto_status">
                <%= image_tag("owner_contacted.png", :width => 100, :height => 92) %>
                <p class = "status_title_grey text-center"><i class="fa fa-check-circle-o" aria-hidden="true"></i> La demande a été envoyée au bailleur</p>
               </div>
               <div>
                 <%= image_tag("arrow_grey.png", :width => 50, :height => 50) %>
               </div>
              <div class = "picto_status">
                <%= image_tag("notify_tenant_done.png", :width => 92, :height => 100) %>
                <p class = "status_title_grey"><i class="fa fa-check-circle-o" aria-hidden="true"></i> Le locataire a été notifié</p>
               </div>
             </div>
             <p class = "status_conclusion text-center"><strong>Félicitations, vous avez effectué l'ensemble des tâches relatives à cet évenement !</strong></p>
        </div>

          <!-- CASE WHERE STATUS UNKNOWN -->
          <% else %>
            <div class = "status-box">
              <div class = "picto_status">
                <%= link_to image_tag("owner_to_be_contacted.png", :width => 100, :height => 100) %>
                <p class = "status_title_black text-center"><i class="fa fa-check-circle-o" aria-hidden="true"></i> Demande envoyée au bailleur</p>
               </div>
               <div>
                 <%= image_tag("arrow_grey.png", :width => 50, :height => 50) %>
               </div>
              <div class = "picto_status">
                <%= link_to image_tag("notify_tenant_color.png", :width => 92, :height => 100) %>
                <p class = "status_title_black">Notifier le locataire</p>
               </div>
             </div>
          <% end %>
  <% elsif @event.description == "retard loyer" %>
    <% if  @event.status == "tenant_to_notify"%>
            <div class = "status-box">
              <div class = "picto_status">
                <%= link_to image_tag("notify_tenant_color.png", :width => 92, :height => 100) %>
                <button class = "btn btn-primary status_title_black" data-toggle='modal' data-target='#ModalLate'>Notifier le locataire</button>
               </div>
             </div>
    <% elsif @event.status == "tenant_notified"%>
                        <div class = "status-box">
            <div class = "picto_status">
              <%= image_tag("notify_tenant_done.png", :width => 92, :height => 100) %>
              <p class = "status_title_grey"><i class="fa fa-check-circle-o" aria-hidden="true"></i> Le locataire a été notifié</p>
             </div>
           </div>
    <% end %>
  <% end %>


